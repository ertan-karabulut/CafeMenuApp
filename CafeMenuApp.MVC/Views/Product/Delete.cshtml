@{
    ViewData["Title"] = "Product Delete";
}
@model DetailProductDto

<form asp-action="DeleteProduct" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <a>Kategori Adı: @Model.Name</a>
    </div>

    <div class="form-group">
        <a>Fiyat: @Model.Price</a>
    </div>

    <div class="form-group">
        <a>Görsel: @Model.ImagePath</a>
    </div>

    <button type="submit" class="btn btn-primary">Sil</button>
    <a asp-action="List" class="btn btn-secondary">İptal</a>
 </form>
