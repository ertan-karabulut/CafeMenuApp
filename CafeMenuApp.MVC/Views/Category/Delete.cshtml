@{
    ViewData["Title"] = "Category Delete";
}
@model DetailCategoryDto

<form asp-action="DeleteCategory" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <a>Kategori Adı: @Model.Name</a>
    </div>

    <div class="form-group">
        <a>Üst Kategori: @Model.ParentCategoryName</a>
    </div>

    <button type="submit" class="btn btn-primary">Sil</button>
    <a asp-action="List" class="btn btn-secondary">İptal</a>
 </form>
